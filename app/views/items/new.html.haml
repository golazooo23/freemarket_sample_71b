= form_for '#' do |f|
  .main
    .infoForm
      .logo
        =link_to '#' do
          =image_tag 'http://furima.tokyo/assets/logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg'

      .exhibitionBox
        .exhibitionImage
          出品画像 
          %span
            必須
          .exhibitionImageForm
            最大３枚までアップロードできます
            = f.file_field :image, placeholder: "クリックしてファイルをアップロード"
            %label.label
            = fa_icon 'camera'


        .itemStatus
          .name
            商品名  
            %span
              必須
            = f.text_field :name, placeholder: "〜文字まで"
          .description
            商品説明
            %span
              必須
            = f.text_area :description, autofocus: true, placeholder: "商品の説明"
          
        .detail
          商品の詳細
          .category
            カテゴリー
            %span
              必須
            = f.select :delivery_charge, [["", ""], ["", ""]], include_blank: '選択して下さい' 

          .brand
            ブランド
            %span
              任意
            = f.text_field :name, placeholder: "例）ベルサーチ"
          .condition
            商品の状態
            %span
              必須
            = f.select :condition, [["新品、未使用", "新品、未使用"], ["未使用に近い", "未使用に近い"], ["目立った傷や汚れなし", "目立った傷や汚れなし"],
                                      ["やや傷や汚れあり","やや傷や汚れあり"], ["全体的に状態が悪い", "全体的に状態が悪い"]], include_blank: '選択して下さい' 


        .delivery
          配送について
          .deliveryCharge
            配送料の負担
            %span
              必須
            = f.select :delivery_charge, [["送料込み(出品者負担)", "送料込み(出品者負担)"], ["着払い(購入者負担)", "着払い(購入者負担)"]], include_blank: '選択して下さい' 
          .deliveryWay
            配送方法
            %span
              必須
            = f.select :delivery_way, [["未定", "未定"], ["クロネコヤマト", "クロネコヤマト"], ["ゆうパック", "ゆうパック"], ["ゆうメール", "ゆうメール"]], include_blank: '選択して下さい' 

          .destination
            発送元の地域
            %span
              必須
            = f.select :destination, [["北海道", "北海道"], ["青森県", "青森県"],["岩手県", "岩手県"],["宮城県","宮城県"], ["秋田県","秋田県"],["山形県","山形県"], ["福島県","福島県"],
                                        ["茨城県","茨城県"], ["栃木県","栃木県"],["群馬県","群馬県"], ["埼玉県","埼玉県"], ["千葉県","千葉県"], ["東京都","東京都"],["神奈川県","神奈川県"],
                                        ["新潟県","新潟県"], ["富山県","富山県"], ["石川県","石川県"],["福井県","福井県"], ["山梨県","山梨県"],["長野県","長野県"], ["岐阜県","岐阜県"],
                                        ["静岡県","静岡県"], ["愛知県","愛知県"],["三重県","三重県"], ["滋賀県","滋賀県"],["京都府","京都府"], ["大阪府","大阪府"],["兵庫県","兵庫県"],
                                        ["奈良県","奈良県"],["和歌山県","和歌山県"], ["鳥取県","鳥取県"],["島根県","島根県"], ["岡山県","岡山県"],["広島県", "広島県"], ["山口県", "山口県"],
                                        ["徳島県", "徳島県"], ["香川県", "香川県"],["愛媛県", "愛媛県"], ["高知県", "高知県"],["福岡県", "福岡県"], ["佐賀県", "佐賀県"],["長崎県", "長崎県"],
                                        ["熊本県", "熊本県"],["大分県", "大分県"], ["宮崎県", "宮崎県"],["鹿児島県", "鹿児島県"], ["沖縄県", "沖縄県"],], include_blank: '選択して下さい' 

          .shippingPreiod
            発送までの日数
            %span
              必須
            = f.select :shipping_period, [["1~2日で発送", "1~2日で発送"], ["2~3日で発送", "2~3日で発送"],["4~7日で発送", "4~7日で発送"]], include_blank: '選択して下さい' 

        .price
          価格（300〜）
          %span
            必須
          .itemPrice
            .sellingPrice
              販売価格
            .sellingPriceForm
              ¥
              = f.number_field :content, placeholder: "半角数字"
              
          -# .commision
          -#   販売手数料(10%)
          -# .profit
          -#   販売利益

          -#   つけてもつけなくても

        .btns
          .sendBtn
            = f.submit "出品する", class: "send-btn"
          .returnBtn
            = link_to '#' do
              戻る
